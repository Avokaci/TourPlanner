<Window x:Class="TourPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourPlanner"
        mc:Ignorable="d"
        Title="TourPlanner" Height="314.304" Width="388.274">
    <Grid Margin="0,0,12,8">

        <TextBlock  Margin="5" Text="{Binding FullName}" />
        <Label  Margin="10,50" Content="First Name:" />
        <TextBox  Margin="78,50,77,186" Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"  Width="200"/>
        <Label  Margin="5,100" Content="Last Name:" />
        <TextBox  Margin="78,100,77,136" Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"  Width="200"/>


    </Grid>
</Window>
